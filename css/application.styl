  text-decoration: none
  opacity: .6

#header #nav .item a:hover
  text-decoration: none
  opacity: 1.0

#header #nav .item.active
  color: white

#header #nav .item.username
  display: inline-block
  vertical-align: top
  zoom: 1
  *display: inline
  overflow: visible
  position: relative
  color: white

#header #nav .item.username a
  text-transform: uppercase
  font-size: inherit

#header #nav .item.username:hover
  border-bottom: 1px solid white

#header #nav .item.username .arrow
