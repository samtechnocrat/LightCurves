.dialog .workflow
  margin-top: 50px // Move down into the bubble

.dialog .step
  display: none

.dialog .step .help
.dialog .step .restart
  background-attachment: scroll
  background-color: transparent
  background-image: url("/images/sprites/css_sprites.png")
  background-position: -675px -219px
  background-repeat: no-repeat
  position: absolute
  left: 50%
  top: 20px
  color: #888888
  display: block
  font-size: 11px
  height: 17px
  line-height: 17px
  text-align: center
  text-decoration: none
  text-transform: uppercase
  width: 55px
  
.dialog .step .help:hover
.dialog .step .restart:hover
  color: #000000
  font-weight: bold

.dialog .step .help
  margin-left: -28px // -60px with restart button
  
.dialog .step .restart
  margin-left: 5px // Temporarily removed

.dialog .step .question
  color: #333333
  font-size: 21px
  margin: 10px auto
  text-align: center
  text-shadow: 0 1px 0 #FFFFFF
  width: 245px

.dialog .step .question.small
  font-size: 17px
  margin: 10px auto

.dialog .actions
  width: 168px
  margin: 0px auto
  text-align: center

.dialog .actions .edit
  display: block
  vertical-align: top
  zoom: 1
  margin: 0 auto

.dialog .actions .button
  background-attachment: scroll
  background-color: transparent
  background-image: url("/images/sprites/css_sprites.png")
  background-repeat: no-repeat
  display: inline-block
  position: relative
  text-align: center
  color: #ffffff
  text-decoration: none
  text-transform: uppercase
  vertical-align: top
  margin: -9px
  font-size: 17px
  height: 82px
  width: 82px
  line-height: 82px
  background-position: -312px 0
  text-shadow: 0 -1px 0 #669900

.dialog .actions .button:hover
  background-position: -312px -82px

.dialog .actions .button:active
  background-position: -312px -164px

.dialog .actions .button.red
  background-position: -394px 0
  text-shadow: 0 -1px 0 #AA4400

.dialog .actions .button.red:hover
  background-position: -394px -82px

.dialog .actions .button.red:active
  background-position: -394px -164px

.dialog .actions .button.add
  font-size: 17px
  height: 40px
  width: 40px
  line-height: 40px
  background-image: url("/images/sprites/add.png")
  background-position: 0 0
  text-shadow: 0 -1px 0 #0066AA
  color: white
  
.dialog .actions .button.add:hover
  background-image: url("/images/sprites/add_hover.png")

.dialog .actions .button.add:active
  background-image: url("/images/sprites/add_active.png")  

.dialog .actions .button.transit
  margin: 0px
  height: 40px
  width: 40px
  line-height: 40px
  background-image: url("/images/sprites/transit_small.png")
  background-position: 0 0
  color: #666666
  display: none

.dialog .actions .button.transit.focus
  background-image: url("/images/sprites/transit_selected_small.png")
  color: #0099CC

.dialog .actions .button.transit .delete
  background: url("/images/sprites/css_sprites.png") no-repeat scroll -568px -161px transparent
  height: 62px
  left: 50%
  margin-left: -25px
  position: absolute
  top: -48px
  width: 53px
  display: none


